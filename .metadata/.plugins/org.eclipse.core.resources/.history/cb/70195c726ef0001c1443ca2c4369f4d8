package com.examen;

public class ejercicio4 {
	public static void main(String[] args) {

		//Ejercicio4: escribe un programa que almacene tres ángulos de un triángulo en variables detipo entero (angulo1, angulo2 y angulo3). 		Crea un condicional que compruebe si esostres ángulos juntos pueden formar un triángulo (los ángulos de un triángulo sumansiempre 180 		grados).
		
		int angulo1=40 , angulo2=40 , angulo3=180;
		 
		if (angulo1+angulo2+angulo3==180) {
			System.out.println("Es un triangulo");
			
		}
		
		else {
			System.out.println ("No es un triangulo");
		}
		
		
}}
